    head
        include partials/header
    body.login
       .contenedor-formulario 
          h1 Crea tu cuenta en Uptask
          if locals.mensajes
             .alertas 
                each categoria in Object.keys(locals.mensajes)
                   each error in mensajes[categoria]
                      .alerta(class=`${categoria}`)
                         p=error
             each error in errores
                p.error.alerta= error.message  


          form#formulario.caja.caja-login(method="POST" action ="crear-cuenta")
            .campo 
               label(for="email") E-mail: 
               imput(type="email" name="email" placeholder="Tu Email" value = email )
            .campo 
               label(for="password") E-mail: 
               input(type="text" name="email" placeholder=" Tu Password" value=password)
            .campo 
               input.boton(type="submit" value="Crear Cuenta")
            .campo 
               a(href="/iniciar-sesion") Volver a Iniciar Sesion
        

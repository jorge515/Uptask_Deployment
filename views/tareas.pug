extends layout

block contenido
   .contenido-principal
      h1= #{nuevoProyecto} -#{proyecto.nombre}

      form.agregar-tarea(action=`/proyectos/${proyecto.url}` method="POST")
         .campo 
            label(for="tarea") Tarea: 
            input.nombre-tarea(type="text" name="tarea" placeholder="Nombre tarea")
         .campo.enviar 
            input.boton.nueva-tarea(type="submit" value="Agregar")
         pre= vardump(tareas)
         .listado-pendientes 
            ul 
              if tareas.length
                each tarea in tareas 
                  li.tarea (data-tarea=tarea.id)
                     p=tarea.tarea
                     .acciones 
                        if tarea.estado
                            i.far.fa-check-circle.completo
                        else 
                            i.far.fa-ckeck-circle
                        i.fas.fa-trash
               else 
                  p No hay tareas en este proyecto
      
      

        .avance
           h2 Avance del Proyecto 
           #barra-avance.barra-avance
             #porcentaje.porcentaje

     
      .contenedor-acciones 
          #(href =`/proyecto/editar/${proyecto.id}` class="boton") Editar Proyecto
          button#eliminar-proyecto(data-proyecto-url=proyecto.url type ="buttton" class="boton
          eliminar") Eliminar Proyecto
    
  